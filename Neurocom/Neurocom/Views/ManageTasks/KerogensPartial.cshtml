@model IEnumerable<Neurocom.CustomModels.KerogenViewModel>
@using Neurocom.CustomModels

<table class="highlight">
    <tr>
        <th>KerogenID</th>
        <th class="NumericCol">Carbon</th>
        <th class="NumericCol">Hydrogen</th>
        <th class="NumericCol">Oxygen</th>
        <th class="NumericCol">Nitrogen</th>
        <th class="NumericCol">Sulfur</th>
        <th class="NumericCol">Type</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.Id.ToString(), "GetData", item)</td>
            <td class="NumericCol">@item.Carbon</td>
            <td class="NumericCol">@item.Hydrogen</td>
            <td class="NumericCol">@item.Oxygen</td>
            <td class="NumericCol">@item.Nitrogen</td>
            <td class="NumericCol">@item.Sulfur</td>
            <td class="NumericCol">@item.Type</td>
            <td>
                @using (Html.BeginForm("DeleteData", "ManageTasks"))
                {
                    @Html.Hidden("Id", item.Id)
                    @Html.Hidden("TaskName", item.TaskName)
                    <input type="submit" value="Видалити" class="waves-effect waves-light btn" />
                }
            </td>
        </tr>
    }

</table>

<div class="center">
    <h5 class="header col s12">@Html.ActionLink("Додати новий запис про кероген", "CreateData", new KerogenViewModel { TaskName = "Kerogens", Type = 1 })</h5>

</div>