@model Neurocom.BL.Services.LVQInitializer

@using (Html.BeginForm("CreateNetworkInput", "User"))
{
    <p>@Html.TextBoxFor(m => m.decayRate, new { type = "number", min = "0.5", max = "0.9", step = "0.1", Value = "0.7", required = "required", style = "width:176px" })</p>
    <br />
    <p>@Html.TextBoxFor(m => m.learningRate, new { type = "number", min = "0.1", max = "0.9", step = "0.1", Value = "0.7", required = "required", style = "width:176px" })</p>
    <br />
    <p>@Html.TextBoxFor(m => m.minError, new { type = "number", min = "0.001", max = "0.9", step = "0.001", Value = "0.001", required = "required", style = "width:176px" })</p>
    @Html.Hidden("taskName", Model.taskName)
    @Html.Hidden("networkName", Model.networkName)
    @Html.Hidden("answers", Model.answers)
    @Html.Hidden("patterns", Model.patterns)
    @Html.Hidden("numOfClusters", Model.numOfClusters)
    <input type="submit" value="Створити мережу">
}


