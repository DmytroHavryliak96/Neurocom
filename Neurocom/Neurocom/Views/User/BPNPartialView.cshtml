@model Neurocom.BL.Services.BPNInitializer

@using (Html.BeginForm("CreateNet", "User"))
{
     <div class="col-md-4">
        <h5>Кількість нейронів у прихованому шарі</h5>
        <br />
        <h5>Швидкість навчання</h5>
        <br />
        <h5>Коефіцієнт Моментум</h5>
        <br />
        <h5>Мінімальна похибка навчання</h5>
        <br />
    </div>
    <p>@Html.TextBoxFor(m => m.hidden, new { type = "number", min = "5", max = "10", Value = "7", required = "required", style = "width:176px" })</p>
    <br />
    <p>@Html.TextBoxFor(m => m.learningRate, new { type = "number", min = "0.1", max = "0.9", step = "0.1", Value = "0.8", required = "required", style = "width:176px" })</p>
    <br />
    <p>@Html.TextBoxFor(m => m.Momentum, new { type = "number", min = "0.1", max = "0.9", step = "0.1", Value = "0.1", required = "required", style = "width:176px" })</p>
    <br />
    <p>@Html.TextBoxFor(m => m.minError, new { type = "number", min = "0.001", max = "0.9", step = "0.001", Value = "0.001", required = "required", style = "width:176px" })</p>
    @Html.Hidden("taskName", Model.taskName)
    @Html.Hidden("networkName", Model.networkName)
    @Html.Hidden("parameters", Model.parameters)
    <input type="submit" value="Створити мережу">
}


